# --- CHEMIN: docker/ollama/Dockerfile.dev (VERSION FINALE) ---
FROM ollama/ollama:latest

# Copier notre script de démarrage intelligent
COPY ./entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Définir une zone de stockage persistante pour les modèles téléchargés
VOLUME /root/.ollama

# Quand le conteneur démarrera, il exécutera notre script. C'est tout.
ENTRYPOINT ["/entrypoint.sh"]
