}

/* ===== FORMULAIRES ===== */
.form-group {
    margin-bottom: var(--space-16);
}

.form-group--inline {
    display: flex;
    gap: var(--space-8);
    align-items: end;
}

.form-group--inline .form-control {
    flex: 1;
}

.form-label {
    display: block;
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    margin-bottom: var(--space-8);
    font-size: var(--font-size-sm);
}

.form-control {
    width: 100%;
    padding: var(--space-8) var(--space-12);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-base);
    font-size: var(--font-size-md);
    color: var(--color-text);
    background: var(--color-surface);
    transition: border-color var(--duration-fast) var(--ease-standard), box-shadow var(--duration-fast) var(--ease-standard);
    line-height: 1.5;
}

.form-control:focus {
    outline: var(--focus-outline);
    border-color: var(--color-primary);
}

.form-control::placeholder {
    color: var(--color-text-secondary);
}

.form-text {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    margin-top: var(--space-4);
}

select.form-control {
    cursor: pointer;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-image: var(--select-caret-light);
    background-repeat: no-repeat;
    background-position: right var(--space-12) center;
    background-size: 16px;
    padding-right: var(--space-32);
}

@media (prefers-color-scheme: dark) {
    select.form-control {
        background-image: var(--select-caret-dark);
    }
}

[data-color-scheme="dark"] select.form-control {
    background-image: var(--select-caret-dark);
}

[data-color-scheme="light"] select.form-control {
    background-image: var(--select-caret-light);
}

textarea.form-control {
    resize: vertical;
    min-height: 80px;
    font-family: var(--font-family-base);
    font-size: var(--font-size-base);
}

/* ===== CARTES ===== */
.card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--duration-normal) var(--ease-standard);
    box-shadow: var(--shadow-sm);
}

.card:hover {
    box-shadow: var(--shadow-md);
}

.card__header {
    padding: var(--space-16);
    border-bottom: 1px solid var(--color-card-border-inner);
    background: var(--color-background);
}

.card__body {
    padding: var(--space-16);
}

.card__footer {
    padding: var(--space-16);
    border-top: 1px solid var(--color-card-border-inner);
    background: var(--color-background);
}

/* ===== PROJETS ===== */
.projects-container {
    margin-bottom: var(--space-32);
}

.reporting-grid {

    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-24);
}

.projects-empty {
    text-align: center;
    padding: var(--space-32) var(--space-16);
    color: var(--color-text-secondary);
}

.projects-empty__icon {
    font-size: var(--font-size-4xl);
    display: block;
    margin-bottom: var(--space-16);
}

.report-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-20);
    transition: all var(--duration-normal) var(--ease-standard);
    box-shadow: var(--shadow-sm);
}

.project-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
}

.project-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-16);
    gap: var(--space-12);
}

.project-card__info {
    flex: 1;
    min-width: 0;
}

.project-card__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-8);
    color: var(--color-text);
}

.project-card__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-normal);
}

.project-card__body {
    margin-bottom: var(--space-16);
}

.project-card__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-12);
}

.stat-item {
    text-align: center;
}

.stat-item__label {
    display: block;
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-weight-medium);
}

.stat-item__value {
    display: block;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
}

.project-card__actions {
    display: flex;
    gap: var(--space-8);
    flex-wrap: wrap;
}

/* ===== STATUS ===== */
.status {
    display: inline-flex;
    align-items: center;
    padding: var(--space-6) var(--space-12);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.status--success {
    background-color: rgba(var(--color-success-rgb), var(--status-bg-opacity));
    color: var(--color-success);
    border: 1px solid rgba(var(--color-success-rgb), var(--status-border-opacity));
}

.status--error {
    background-color: rgba(var(--color-error-rgb), var(--status-bg-opacity));
    color: var(--color-error);
    border: 1px solid rgba(var(--color-error-rgb), var(--status-border-opacity));
}

.status--warning {
    background-color: rgba(var(--color-warning-rgb), var(--status-bg-opacity));
    color: var(--color-warning);
    border: 1px solid rgba(var(--color-warning-rgb), var(--status-border-opacity));
}

.status--info {
    background-color: rgba(var(--color-info-rgb), var(--status-bg-opacity));
    color: var(--color-info);
    border: 1px solid rgba(var(--color-info-rgb), var(--status-border-opacity));
}

/* ===== GRILLES D'ANALYSES ===== */
.analysis-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-24);
}

.analysis-card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--duration-normal) var(--ease-standard);
    box-shadow: var(--shadow-sm);
}

.analysis-card:hover {
    box-shadow: var(--shadow-md);
}

.analysis-card__header {
    padding: var(--space-16);
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-card-border-inner);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.analysis-card__title-group {
    display: flex;
    align-items: center;
    gap: var(--space-12);
}

.analysis-card__status {
    font-size: var(--font-size-xs);
    color: var(--color-success);
    font-weight: var(--font-weight-medium);
}

.analysis-card__header h4 {
    margin: 0;
    font-size: var(--font-size-lg);
    color: var(--color-text);
}

.analysis-card__content {
    padding: var(--space-16);
}

.analysis-card__content p {
    margin-bottom: var(--space-16);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-normal);
}

/* ===== BADGES ===== */
.badge {
    display: inline-block;
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    line-height: 1;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: var(--radius-full);
}

.badge--success {
    color: var(--color-success);
    background-color: rgba(var(--color-success-rgb), 0.15);
    border: 1px solid rgba(var(--color-success-rgb), 0.2);
}

/* Style pour les cartes d'analyse terminées */
.analysis-card--done {
    border-color: rgba(var(--color-success-rgb), 0.4);
    background-color: rgba(var(--color-success-rgb), 0.05);
}

.analysis-card--done .analysis-card__description {
    opacity: 0.8;
}

/* Style pour les cartes d'analyse en cours de chargement */
.analysis-card--loading {
    position: relative;
    pointer-events: none; /* Désactive les clics sur la carte */
    opacity: 0.7;
}

.analysis-card--loading::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(var(--color-surface-rgb, 255, 255, 253), 0.5);
    border-radius: var(--radius-lg);
    z-index: 1;
}

.analysis-card--loading .analysis-card__footer::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 24px;
    height: 24px;
    margin-top: -12px;
    margin-left: -12px;
    border: 3px solid var(--color-primary);
    border-top-color: transparent;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    z-index: 2;
}

/* ===== TASKS SECTION ===== */
.tasks-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
    max-width: var(--container-lg);
    margin: 0 auto;
}

.task-card {
    background-color: var(--color-surface);
    border-left: 4px solid var(--color-border);
    border-radius: var(--radius-base);
    box-shadow: var(--shadow-sm);
    transition: all var(--duration-fast);
}

.task-card--finished { border-left-color: var(--color-success); }
.task-card--started, .task-card--queued { border-left-color: var(--color-info); }
.task-card--failed { border-left-color: var(--color-error); }

.task-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-12);
    padding: var(--space-12) var(--space-16);
    border-bottom: 1px solid var(--color-border);
}

.task-card__status-icon {
    font-size: var(--font-size-lg);
}

.task-card__description {
    flex: 1;
    font-weight: var(--font-weight-medium);
    margin: 0;
}

.task-card__body {
    padding: var(--space-12) var(--space-16);
    font-size: var(--font-size-sm);
}

.task-details {
    display: flex;
    gap: var(--space-24);
    color: var(--color-text-secondary);
}

.task-error {
    margin-top: var(--space-12);
    color: var(--color-error);
}

/* ===== IMPORT PDF ===== */
.import-container {
    max-width: var(--container-md);
}

.import-placeholder,
.grids-placeholder,
.chat-placeholder,
.results-placeholder,
.validation-placeholder {
    text-align: center;
    padding: var(--space-32) var(--space-16);
    color: var(--color-text-secondary);
}

.import-placeholder__icon,
.grids-placeholder__icon,
.chat-placeholder__icon,
.results-placeholder__icon,
.validation-placeholder__icon {
    font-size: var(--font-size-4xl);
    display: block;
    margin-bottom: var(--space-16);
}

.pdf-drop-zone {
    border: 2px dashed var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-32);
    text-align: center;
    margin-bottom: var(--space-24);
    transition: all var(--duration-normal) var(--ease-standard);
    cursor: pointer;
}

.pdf-drop-zone:hover,
.pdf-drop-zone--dragover {
    border-color: var(--color-primary);
    background: var(--color-secondary);
}

.pdf-drop-zone__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-12);
}

.pdf-drop-zone__icon {
    font-size: var(--font-size-4xl);
    color: var(--color-text-secondary);
}

.import-sources {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-24);
}

.import-source-card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--duration-normal) var(--ease-standard);
    box-shadow: var(--shadow-sm);
}

.import-source-card:hover {
    box-shadow: var(--shadow-md);
}

.import-source-card__header {
    padding: var(--space-16);
    background: var(--color-secondary);
    border-bottom: 1px solid var(--color-card-border-inner);
}

.import-source-card__header h4 {
    margin: 0;
    color: var(--color-primary);
}

.import-source-card__content {
    padding: var(--space-16);
}

.import-source-card__content p {
    margin-bottom: var(--space-16);
    font-size: var(--font-size-sm);
}

/* ===== GRILLES ===== */
.grids-content {
    max-width: var(--container-md);
}

.grids-header {
    margin-bottom: var(--space-24);
}

.grids-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
}

.grid-card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    padding: var(--space-16);
    transition: all var(--duration-normal) var(--ease-standard);
    box-shadow: var(--shadow-sm);
}

.grid-card:hover {
    box-shadow: var(--shadow-md);
}

.grid-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-12);
}

.grid-card__header h4 {
    margin: 0;
    font-size: var(--font-size-lg);
}

.grid-card__count {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.grid-card__content {
    margin-bottom: var(--space-12);
}

.grid-fields-preview {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-8);
}

.field-tag {
    background: var(--color-secondary);
    color: var(--color-primary);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-base);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
}

.field-tag--more {
    background: var(--color-secondary-hover);
    color: var(--color-text-secondary);
}

.grid-card__actions {
    display: flex;
    gap: var(--space-8);
}

.grid-field-item {
    display: flex;
    gap: var(--space-8);
    align-items: center;
    margin-bottom: var(--space-8);
}

.grid-field-item:last-child {
    margin-bottom: 0;
}

.grids-empty {
    text-align: center;
    padding: var(--space-32);
    color: var(--color-text-secondary);
}

.grids-empty__icon {
    font-size: var(--font-size-4xl);
    display: block;
    margin-bottom: var(--space-16);
}

/* ===== CHAT ===== */
.chat-interface {
    max-width: var(--container-md);
    margin: 0 auto;
}

.chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-24);
    padding-bottom: var(--space-16);
    border-bottom: 1px solid var(--color-border);
}

.chat-status {
    font-size: var(--font-size-sm);
    color: var(--color-success);
    font-weight: var(--font-weight-medium);
}

.chat-messages {
    height: 400px;
    overflow-y: auto;
    padding: var(--space-16);
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-16);
}

.chat-message {
    margin-bottom: var(--space-16);
    padding: var(--space-12);
    border-radius: var(--radius-base);
    max-width: 80%;
}

.chat-message--user {
    background: var(--color-primary);
    color: var(--color-btn-primary-text);
    margin-left: auto;
    text-align: right;
}

.chat-message--assistant {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    color: var(--color-text);
}

.chat-message__content {
    line-height: var(--line-height-normal);
}

.chat-message__sources {
    margin-top: var(--space-8);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    font-size: var(--font-size-xs);
    opacity: 0.8;
}

.chat-welcome {
    text-align: center;
    padding: var(--space-32);
    color: var(--color-text-secondary);
}

.chat-welcome__icon {
    font-size: var(--font-size-4xl);
    display: block;
    margin-bottom: var(--space-16);
}

.chat-input {
    display: flex;
    gap: var(--space-12);
    align-items: end;
}

.chat-input textarea {
    flex: 1;
    resize: none;
}

/* ===== TABLEAUX ===== */
.report-card h4 { margin-bottom: var(--space-16); }
#bibliographyOutput {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-16);
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-card-border);
}

.table th {
    background: var(--color-background);
    padding: var(--space-12);
    text-align: left;
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    border-bottom: 1px solid var(--color-card-border-inner);
    font-size: var(--font-size-sm);
}

.table td {
    padding: var(--space-12);
    border-bottom: 1px solid var(--color-card-border-inner);
    font-size: var(--font-size-sm);
}

.table tr:last-child td {
    border-bottom: none;
}

.table tr:hover {
    background: var(--color-secondary);
}

.title-cell {
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.justification-cell {
    max-width: 200px;
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
}

.score-badge {
    background: var(--color-secondary);
    color: var(--color-primary);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-full);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-xs);
}

.extraction-data {
    background: var(--color-surface);
    padding: var(--space-8);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    max-height: 200px;
    overflow-y: auto;
}

/* ===== VALIDATION ===== */
.validation-content {
    max-width: var(--container-md);
}

.validation-stats {
    margin-bottom: var(--space-24);
}

.stat-card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    padding: var(--space-16);
    box-shadow: var(--shadow-sm);
}

.stat-card h4 {
    margin-bottom: var(--space-12);
}

.stat-card p {
    margin-bottom: var(--space-8);
    font-size: var(--font-size-sm);
}

.validation-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-16);
    padding: var(--space-16);
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-16);
    box-shadow: var(--shadow-sm);
}

.extraction-details {
    margin-top: var(--space-16);
    padding-top: var(--space-12);
    border-top: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
}

.extracted-field {
    font-size: var(--font-size-sm);
}

.extracted-field__label {
    display: block;
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-4);
}
.extracted-field__value {
    margin: 0;
}
.validation-item__info {
    flex: 1;
    min-width: 0;
}

.validation-item__info h4 {
    margin-bottom: var(--space-8);
    font-size: var(--font-size-base);
}

.validation-item__info p {
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.validation-item__actions {
    display: flex;
    gap: var(--space-8);
    flex-shrink: 0;
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-16);
    margin-top: var(--space-16);
}

.metric-card {
    text-align: center;
    padding: var(--space-12);
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-base);
    box-shadow: var(--shadow-sm);
}

.metric-card h5 {
    margin-bottom: var(--space-8);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.metric-value {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
}

/* ===== PARAMÈTRES ===== */
.settings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-24);
}

.settings-card {
    background: var(--color-surface);
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
}

.settings-card__header {
    padding: var(--space-16);
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-card-border-inner);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.analysis-card__title-group {
    display: flex;
    align-items: center;
    gap: var(--space-12);
}

.analysis-card__status {
    font-size: var(--font-size-xs);
    color: var(--color-success);
    font-weight: var(--font-weight-medium);
}

.settings-card__header h4 {
    margin: 0;
    font-size: var(--font-size-lg);
}

.settings-card__content {
    padding: var(--space-16);
}

.settings-card__content p {
    margin-bottom: var(--space-16);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.prompt-item,
.model-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-12);
    padding: var(--space-12);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-base);
    margin-bottom: var(--space-12);
}

.prompt-item__info {
    flex: 1;
    min-width: 0;
}

.prompt-item__info h5 {
    margin-bottom: var(--space-4);
    font-size: var(--font-size-base);
}

.prompt-item__info p {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.profiles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-16);
}

.profile-card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-base);
    padding: var(--space-12);
}

.profile-card h5 {
    margin-bottom: var(--space-12);
    font-size: var(--font-size-base);
}

.profile-models {
    margin-bottom: var(--space-12);
}

.model-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-8);
    padding: 0;
    background: none;
    border: none;
}

.model-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
}

.model-value {
    font-size: var(--font-size-xs);
    color: var(--color-text);
    min-height: 200px;
    font-family: var(--font-family-mono);
}

.profile-actions {
    display: flex;
    gap: var(--space-8);
}

.queue-status {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
}

.queue-item {
    display: flex;
    justify-content: space-between;
    padding: var(--space-8);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-base);
}

.queue-name {
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
}

.queue-count {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.models-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
}

.model-name {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
}

.model-size {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
}

/* ===== MODALES ===== */
/* ===== MODALS ===== */

.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    align-items: center;
    justify-content: center;
    padding: var(--space-16);
    overflow-y: auto;
    z-index: 1000;
}

.modal.modal--show {
    display: flex;
    animation: fadeIn 0.2s ease-out;
}

.modal__content {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    margin: var(--space-16);
}

.modal__content--large {
    max-width: 800px;
}

.modal__header {
    padding: var(--space-20);
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal__header h3 {
    margin: 0;
}

.modal__close {
    background: none;
    border: none;
    font-size: var(--font-size-2xl);
    cursor: pointer;
    color: var(--color-text-secondary);
    padding: var(--space-4);
    line-height: 1;
}

.modal__close:hover {
    color: var(--color-text);
}

.modal__body {
    padding: var(--space-20);
    overflow-y: auto;
}
.modal form {
    padding: 0; /* The padding is on modal__body now */
}

.modal__actions {
    display: flex;
    gap: var(--space-12);
    justify-content: flex-end;
    margin-top: var(--space-24);
    padding-top: var(--space-16);
    padding: var(--space-16) var(--space-20);
}

/* ===== LOADING OVERLAY ===== */

.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.loading-overlay.loading-overlay--show {
    display: flex;
}

.loading-spinner {
    text-align: center;
    color: var(--color-white);
}

.spinner {
    width: 40px;
    height: 40px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    border-top: 4px solid var(--color-white);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto var(--space-16);
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* ===== TOASTS ===== */

.toast-container {
    position: fixed;
    top: var(--space-20);
    right: var(--space-20);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    width: 100%;
    max-width: 400px;
}

.toast {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-12) var(--space-16);
    box-shadow: var(--shadow-lg);
    display: flex;
    align-items: center;
    gap: var(--space-12);
    min-width: 300px;
    max-width: 500px;
    opacity: 0;
    transform: translateX(100%);
    transition: opacity 0.3s var(--ease-standard), transform 0.3s var(--ease-standard);
    will-change: opacity, transform;
}

.toast--success {
    border-left: 4px solid var(--color-success);
}

.toast--error {
    border-left: 4px solid var(--color-error);
}

.toast--warning {
    border-left: 4px solid var(--color-warning);
}

.toast--info {
    border-left: 4px solid var(--color-info);
}

.toast__icon {
    font-size: var(--font-size-lg);
}

.toast__message {
    flex: 1;
}

.toast__close {
    background: none;
    border: none;
    font-size: var(--font-size-lg);
    cursor: pointer;
    color: var(--color-text-secondary);
    padding: var(--space-4);
    line-height: 1;
    transition: color var(--duration-fast);
}

.toast__close:hover {
    color: var(--color-text);
}

.toast.toast--show {
    opacity: 1;
    transform: translateX(0);
}

.toast.toast--hiding {
    opacity: 0;
    transform: translateX(100%);
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
/* ===== LOADING ===== */
.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-modal);
    opacity: 0;
    visibility: hidden;
    transition: all var(--duration-normal) var(--ease-standard);
}

.loading-overlay.loading-overlay--show {
    opacity: 1;
    visibility: visible;
}

.loading-overlay__content {
    text-align: center;
    color: var(--color-text);
}

.loading-overlay__message {
    margin-top: var(--space-16);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
}

.progress-bar-container {
    width: 250px;
    height: 8px;
    background-color: rgba(var(--color-text-rgb, 245, 245, 245), 0.2);
    border-radius: var(--radius-full);
    margin-top: var(--space-16);
    overflow: hidden;
}

.progress-bar {
    width: 0%;
    height: 100%;
    background-color: var(--color-primary);
    border-radius: var(--radius-full);
    transition: width 0.3s var(--ease-standard);
}

[data-color-scheme="light"] .progress-bar-container {
    background-color: rgba(var(--color-text-rgb, 19, 52, 59), 0.1);
}
.loading-spinner {
    width: 24px;
    height: 24px;
    border: 2px solid var(--color-border);
    border-top: 2px solid var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto;
}

.loading-spinner--lg {
    width: 40px;
    height: 40px;
    border-width: 3px;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1024px) {
    .container {
        padding: 0 var(--space-12);
    }
    
    .projects-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
    
    .analysis-grid,
    .settings-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .app-header__content {
        flex-direction: column;
        gap: var(--space-12);
    }
    
    .app-nav__list {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-12);
    }
    
    .section-header__actions {
        width: 100%;
        justify-content: flex-start;
    }
    
    .projects-grid {
        grid-template-columns: 1fr;
    }
    
    .project-card__stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .project-card__actions {
        justify-content: stretch;
    }
    
    .project-card__actions .btn {
        flex: 1;
        text-align: center;
    }
    
    .import-sources {
        grid-template-columns: 1fr;
    }
    
    .chat-message {
        max-width: 95%;
    }
    
    .validation-item {
        flex-direction: column;
        gap: var(--space-12);
    }
    
    .validation-item__actions {
        width: 100%;
        justify-content: stretch;
    }
    
    .validation-item__actions .btn {
        flex: 1;
    }
    
    .toast-container {
        left: var(--space-8);
        right: var(--space-8);
        max-width: none;
    }
    
    .modal {
        padding: var(--space-8);
    }
    
    .modal__content {
        max-height: 95vh;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 var(--space-8);
    }
    
    .app-main {
        padding: var(--space-16) 0;
    }
    
    .app-header {
        padding: var(--space-12) 0;
    }
    
    .app-header__title {
        font-size: var(--font-size-xl);
    }
    
    .section-header h2 {
        font-size: var(--font-size-2xl);
    }
    
    .project-card {
        padding: var(--space-16);
    }
    
    .project-card__stats {
        grid-template-columns: 1fr;
        gap: var(--space-8);
    }
    
    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
        padding: var(--space-8);
        background: var(--color-secondary);
        border-radius: var(--radius-base);
    }
    
    .chat-input {
        flex-direction: column;
        gap: var(--space-8);
    }
    
    .btn--sm {
        padding: var(--space-8) var(--space-12);
    }
    
    .form-group--inline {
        flex-direction: column;
        align-items: stretch;
    }
    
    .section-header__actions {
        flex-direction: column;
        width: 100%;
    }
    
    .section-header__actions .btn {
        width: 100%;
        justify-content: center;
    }
    
    .project-card__actions {
        flex-direction: column;
    }
    
    .grid-card__actions {
        flex-direction: column;
    }
    
    .grid-card__actions .btn {
        width: 100%;
        justify-content: center;
    }
    
    .modal {
        padding: var(--space-4);
    }
    
    .toast-container {
        top: var(--space-8);
        left: var(--space-4);
        right: var(--space-4);
    }
    
    .settings-grid {
        grid-template-columns: 1fr;
    }
    
    .profiles-grid {
        grid-template-columns: 1fr;
    }
    
    .metrics-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}
