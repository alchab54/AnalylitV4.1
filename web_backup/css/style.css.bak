    flex-direction: column;
    gap: var(--space-8);
}

.abstract-section strong, .metadata-section strong {
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
}

.abstract-section p {
    margin: 0;
    line-height: var(--line-height-normal);
    white-space: pre-wrap;
}

.metadata-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-12);
}

.metadata-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.metadata-item strong {
    font-size: var(--font-size-sm);
    color: var(--color-primary);
}

.metadata-item span {
    font-size: var(--font-size-sm);
    color: var(--color-text);
}

/* Styles pour la modale de détails */
.extraction-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-20);
}

.extraction-header {
    padding-bottom: var(--space-16);
    border-bottom: 1px solid var(--color-border);
}

.extraction-header h4 {
    margin-bottom: var(--space-8);
    color: var(--color-text);
}

.article-id-display {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    font-family: var(--font-family-mono);
}

.extraction-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-16);
}

.detail-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
}

.detail-item label {
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
}

.detail-value {
    font-size: var(--font-size-base);
    color: var(--color-text);
}

.score-value {
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    font-size: var(--font-size-lg);
}

.detail-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
}

.detail-section label {
    font-weight: var(--font-weight-medium);
    color: var(--color-primary);
    font-size: var(--font-size-base);
}

.detail-text {
    padding: var(--space-12);
    background: var(--color-background);
    border-radius: var(--radius-base);
    line-height: var(--line-height-normal);
    border: 1px solid var(--color-border);
}

.detail-json {
    background: var(--color-background);
    padding: var(--space-12);
    border-radius: var(--radius-base);
    overflow-x: auto;
    font-size: var(--font-size-sm);
    line-height: 1.4;
    border: 1px solid var(--color-border);
    font-family: var(--font-family-mono);
}

.detail-links {
    display: flex;
    gap: var(--space-8);
    flex-wrap: wrap;
}

.detail-link {
    padding: var(--space-6) var(--space-12);
    background: var(--color-primary);
    color: var(--color-btn-primary-text);
    border-radius: var(--radius-base);
    text-decoration: none;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
}

.detail-link:hover {
    background: var(--color-primary-hover);
    color: var(--color-btn-primary-text);
}

/* Source badges */
.source-badge {
    font-size: var(--font-size-xs);
    padding: var(--space-2) var(--space-6);
    border-radius: var(--radius-sm);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
}
.badge--pubmed {
    background-color: var(--color-bg-1); /* Bleu */
    color: #3B82F6;
}
.badge--arxiv {
    background-color: var(--color-bg-2); /* Jaune */
    color: #F59E0B;
}
.badge--crossref {
    background-color: var(--color-bg-3); /* Vert */
    color: #22C55E;
}
.badge--ieee {
    background-color: var(--color-bg-4); /* Rouge */
    color: #EF4444;
}
.badge--zotero {
    background-color: var(--color-bg-5); /* Violet */
    color: #9333EA;
}
.badge--manual {
    background-color: var(--color-bg-6); /* Orange */
    color: #F97316;
}

[data-color-scheme="dark"] .badge--pubmed { color: #60A5FA; }
[data-color-scheme="dark"] .badge--arxiv { color: #FBBF24; }
[data-color-scheme="dark"] .badge--crossref { color: #4ADE80; }
[data-color-scheme="dark"] .badge--ieee { color: #F87171; }
[data-color-scheme="dark"] .badge--zotero { color: #A78BFA; }
[data-color-scheme="dark"] .badge--manual { color: #FB923C; }

@media (prefers-color-scheme: dark) {
    :root:not([data-color-scheme]) .badge--pubmed { color: #60A5FA; }
    :root:not([data-color-scheme]) .badge--arxiv { color: #FBBF24; }
    :root:not([data-color-scheme]) .badge--crossref { color: #4ADE80; }
    :root:not([data-color-scheme]) .badge--ieee { color: #F87171; }
    :root:not([data-color-scheme]) .badge--zotero { color: #A78BFA; }
    :root-not([data-color-scheme]) .badge--manual { color: #FB923C; }
}

/* Status améliorés */
.status--sm {
    padding: var(--space-2) var(--space-6);
    font-size: var(--font-size-xs);
}

/* Responsive pour les résultats */
@media (max-width: 768px) {
    .results-header {
        flex-direction: column;
        gap: var(--space-16);
    }
    
    .results-stats {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .results-actions {
        width: 100%;
        justify-content: center;
    }
    
    .extraction-details-grid {
        grid-template-columns: 1fr;
    }
    
    .metadata-grid {
        grid-template-columns: 1fr;
    }
}

/* Styles pour les options d'analyse */
.analysis-options {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-24);
}

.analysis-option {
