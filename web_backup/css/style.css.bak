@media (max-width: 768px) {
  .col-source, .source-cell { display: none; }
  .col-main { width: 60%; }
  .col-pdf { width: 15%; }
  .col-score { width: 25%; }
}

@media (max-width: 480px) {
  .col-pdf, .pdf-cell { display: none; }
  .col-main { width: 70%; }
  .col-score { width: 30%; }
  
  .article-authors { display: none; }
}

/* Nouveaux styles pour afficher les scores et justifications */
.col-select { width: 5%; }
.col-main { width: 45%; }
.col-source { width: 10%; }
.col-pdf { width: 8%; }
.col-score { width: 22%; }
.col-actions { width: 10%; }

.score-container {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.score-badge {
  display: inline-block;
  padding: var(--space-2) var(--space-6);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  text-align: center;
  max-width: 60px;
}

.score--high {
  background-color: rgba(var(--color-success-rgb), 0.15);
  color: var(--color-success);
  border: 1px solid rgba(var(--color-success-rgb), 0.25);
}

.score--medium {
  background-color: rgba(var(--color-warning-rgb), 0.15);
  color: var(--color-warning);
  border: 1px solid rgba(var(--color-warning-rgb), 0.25);
}

.score--low {
  background-color: rgba(var(--color-error-rgb), 0.15);
  color: var(--color-error);
  border: 1px solid rgba(var(--color-error-rgb), 0.25);
}

.score-justification {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  font-style: italic;
  line-height: 1.3;
  text-align: left;
}

.select-cell {
  text-align: center;
  width: 1%;
}

/* Responsive : ajuster pour mobile */
@media (max-width: 768px) {
  .col-source, .source-cell { display: none; }
  .col-main { width: 50%; }
  .col-score { width: 30%; }
  
  .score-justification { 
    display: none; /* Masquer la justification sur mobile */
  }
}

.toast__close {
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    font-size: 20px;
    line-height: 1;
    cursor: pointer;
    padding: 0 4px;
    margin-left: var(--space-12);
    opacity: 0.7;
    transition: opacity 0.2s;
}

.toast__close:hover {
    opacity: 1;
}